<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to t('.edit'), edit_profile_path, class: 'btn btn-lime float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= t('activerecord.attributes.user.email') %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('activerecord.attributes.user.name') %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('activerecord.attributes.user.weight') %></th>
          <td><%= current_user.weight %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('activerecord.attributes.user.age') %></th>
          <td><%= current_user.age %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('activerecord.attributes.user.gender') %></th>
          <td><%= current_user.gender %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('activerecord.attributes.user.area') %></th>
          <td><%= current_user.area %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('profiles.show.caffeine_limit') %></th>
          <td><%= @caffeine_limit %></td>
        </tr>
        <div class="card-actions mt-5">
            <% if current_user.line_user_id.present? %>
              <%= link_to t('.lined'), profile_path, class:"btn btn-success mb-3" %>
            <% else %>
              <%= link_to t('.line'), line_login_login_path, class:"btn btn-success mb-3" %>
            <% end %>
          </div>
      </table>
      <%= link_to '戻る', mypage_calendar_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>