<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('views.user_sessions.new.title') %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
            <%= f.label :email, t('activerecord.attributes.user.email') %>
            <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :password, t('activerecord.attributes.user.password') %>
            <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions">
            <%= f.submit t('views.defaults.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to t('views.user_sessions.new.to_register_page'), new_user_path %>
        <a href="#"><%= t('views.user_sessions.new.password_forget') %></a>
      </div>
    </div>
  </div>
</div>
